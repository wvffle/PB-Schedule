<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="net.wvffle.android.pb.schedule.viewmodels.ExtraSubjectsViewModel" />

        <variable
            name="position"
            type="java.lang.Integer" />
    </data>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{viewModel.selected.get(viewModel.filteredClasses.get(position).id)}"
                android:onCheckedChanged="@{(button, checked) -> viewModel.select(position, checked)}"
                android:text=""
                tools:text="" />

            <com.github.abdularis.civ.AvatarImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                app:avatarBackgroundColor="@{viewModel.filteredClasses.get(position).type.color}"
                app:text="@{viewModel.filteredClasses.get(position).type.name()}"
                app:textColor="#FFF"
                app:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="4dp"
                        android:text="@{viewModel.filteredClasses.get(position).time}"
                        android:textColor="#717171"
                        tools:text="21:37" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="4dp"
                        android:text="@{viewModel.filteredClasses.get(position).subject.name}"
                        tools:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="4dp"
                        android:text="@{viewModel.filteredClasses.get(position).dayName.toUpperCase()}"
                        android:textColor="#717171"
                        tools:text="PON" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:text="@string/room_"
                        android:textColor="#878787"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="4dp"
                        android:text="@{viewModel.filteredClasses.get(position).room.name}"
                        android:textColor="#878787"
                        android:textSize="12dp"
                        tools:text="666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="4dp"
                        android:text="@{viewModel.filteredClasses.get(position).type.fullName + ` ` + viewModel.filteredClasses.get(position).group}"
                        android:textColor="#464646"
                        android:textSize="12dp"
                        tools:text="666" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</layout>